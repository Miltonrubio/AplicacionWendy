<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        tools:context=".HomeFragment">


        <RelativeLayout
            android:id="@+id/ContenedorContenido"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/fondowen"
            android:visibility="visible">


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewActividades"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_below="@id/yourConstraintLayoutId"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="15dp"
                android:layout_marginTop="484dp"
                android:layout_marginEnd="17dp" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="-1dp"
                android:layout_marginTop="437dp"
                android:layout_marginEnd="1dp"
                android:gravity="center_horizontal"
                android:text="Actividades proximas"
                android:textColor="@color/white"
                android:textSize="17dp" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/yourConstraintLayoutId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:background="@color/AzulFondo"
                android:padding="11dp"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/searchButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:contentDescription="Buscar"
                    android:padding="4dp"
                    android:src="@drawable/baseline_youtube_searched_for_24"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/baseline_youtube_searched_for_24"
                    app:tint="@color/azulito" />

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/searchEditTextCitas"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_marginStart="8dp"
                    android:hint="Buscar por ID, fecha, etc"
                    android:inputType="textEmailAddress"
                    android:textColor="@color/white"
                    android:textColorHint="@color/azulito"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/searchButton"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewCitas"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_below="@id/yourConstraintLayoutId"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="19dp"
                android:layout_marginTop="126dp"
                android:layout_marginEnd="13dp" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/botonAgregarCita"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:srcCompat="@drawable/baseline_add_box_24"
                app:tint="@color/azulito" />

            <TextView
                android:id="@+id/textViewBienvenido"
                android:layout_width="403dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="2dp"
                android:layout_marginTop="36dp"
                android:layout_marginEnd="6dp"
                android:gravity="center_horizontal"
                android:text="Bienvenido usuario"
                android:textColor="@color/white"
                android:textSize="22dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="412dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="-4dp"
                android:layout_marginTop="84dp"
                android:layout_marginEnd="4dp"
                android:gravity="center_horizontal"
                android:text="Proximas citas"
                android:textColor="@color/white"
                android:textSize="17dp" />

        </RelativeLayout>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/ContenedorSinInternet"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone">


            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/lottieNoInternet"
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.496"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.403"
                app:lottie_autoPlay="true"
                app:lottie_fileName="nointernet.json"
                app:lottie_imageAssetsFolder="assets"
                app:lottie_loop="true" />


        </androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/ContenedorSinContenido"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone">


            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/lottieNoContenido"
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.496"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.403"
                app:lottie_autoPlay="true"
                app:lottie_fileName="nocontent.json"
                app:lottie_imageAssetsFolder="assets"
                app:lottie_loop="true" />

            <TextView
                android:id="@+id/textViewSinContenidos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginHorizontal="12dp"
                android:layout_marginTop="25dp"
                android:gravity="center"
                android:text="No tienes citas por ahora"
                android:textColor="@color/black"
                android:textSize="36sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/lottieNoContenido" />


            <ImageView
                android:id="@+id/btnAgregarCita"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_marginTop="628dp"
                android:background="@drawable/btn_background"
                android:elevation="4dp"
                android:src="@drawable/baseline_add_box_24"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.916"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:tint="@color/AzulVerdoso" />
        </androidx.constraintlayout.widget.ConstraintLayout>


    </RelativeLayout>
</androidx.core.widget.NestedScrollView>