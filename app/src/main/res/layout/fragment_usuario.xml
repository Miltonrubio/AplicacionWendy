<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/AzulFondo"
    android:orientation="vertical">

    <!-- Contenedor clickeable para todos los elementos -->
    <LinearLayout
        android:id="@+id/contenedorClickeable"
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">


        <ImageView
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_gravity="center"
            android:id="@+id/ImagenSesionIniciada"
            android:src="@drawable/baseline_person_2_24" />

        <LinearLayout
            android:id="@+id/contenedorNombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center_horizontal"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/tvNombreMecanico"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:enabled="false"
                android:text="Usuario"
                android:textColor="@color/azulito"
                android:textSize="32dp"
                android:textStyle="bold" />
        </LinearLayout>


    </LinearLayout>



    <TextView
        android:id="@+id/tvCorreo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:enabled="false"
        android:layout_marginBottom="10dp"
        android:text="Correo"
        android:textColor="@color/azulito"
        android:textSize="26dp"
        tools:ignore="NotSibling" />


    <TextView
        android:id="@+id/tvRol"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvCorreo"
        android:layout_centerHorizontal="true"
        android:enabled="false"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:text="Rol"
        android:textColor="@color/azulito"
        android:textSize="26dp"
        tools:ignore="NotSibling" />

    <TextView
        android:id="@+id/tvTel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvCorreo"
        android:layout_centerHorizontal="true"
        android:enabled="false"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:text="Telefono"
        android:textColor="@color/azulito"
        android:textSize="26dp"
        tools:ignore="NotSibling" />


    <LinearLayout
        android:id="@+id/ContenedorCerrarSesion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="20dp"
        android:elevation="25dp"
        android:layout_gravity="center"
        android:gravity="center"
        >

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/customButton"
            android:layout_width="wrap_content"
            android:backgroundTint="@color/azulito"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Cerrar Sesion"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:layout_gravity="center"/>

    </LinearLayout>

</LinearLayout>

