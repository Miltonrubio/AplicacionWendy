<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/FrameActividades"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="12dp"
    android:layout_marginVertical="7dp"
    android:layout_marginBottom="9dp"
    android:background="@drawable/redondeado_azul_cielo"
    android:elevation="4dp"
    android:padding="8dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="5dp"
            android:paddingEnd="8dp"
            android:scaleType="centerCrop"
            android:src="@drawable/notifica" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="8dp">

            <TextView
                android:id="@+id/textNombreUsuario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Detalles de cita"
                android:textColor="@color/black"
                android:textSize="19sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/fechadeCita"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fecha de cita"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/horaCita"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hora de la cita"
                android:textColor="@color/black"
                android:gravity="center"
                android:textSize="15sp" />


            <TextView
                android:id="@+id/textTelefonoPaciente"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="Telefono de paciente"
                android:textColor="@color/AzulFondo"
                android:textSize="15dp"
                android:textStyle="bold"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>