<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="RoundedTextInputLayout" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">15dp</item>
    </style>

    <style name="RoundedShape">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>


    <style name="MyDatePickerStyle">
        <!-- Cambia el color de fondo -->
        <item name="android:background">@color/white</item>
        <!-- Cambia el color del texto -->
        <item name="android:textColor">@color/black</item>
        <!-- Cambia el color de los números y el calendario -->
        <item name="android:calendarTextColor">@color/verdesito</item>
        <!-- Cambia el color del fondo del diálogo de selección de fecha -->
        <item name="android:datePickerDialogTheme">@style/MyDatePickerDialogTheme</item>
    </style>

    <style name="MyDatePickerDialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <!-- Cambia el color del fondo del diálogo -->
        <item name="android:windowBackground">@color/verdesito</item>
        <!-- Cambia el color del texto del diálogo -->
        <item name="android:textColorPrimary">@color/verdesito</item>
    </style>


</resources>

